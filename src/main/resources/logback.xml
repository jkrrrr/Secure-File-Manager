<configuration>
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>logs/recent.log</file>
        <encoder>
            <pattern>%-5level %d{HH:mm:ss.SSS} %msg \(%class.%method @ line %line\)%n</pattern>
        </encoder>
    </appender>

    <root level="trace">
        <appender-ref ref="FILE"/>
    </root>
</configuration>